{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/heimgewebe/metarepo/contracts-v1/contracts/os.context.text.redacted.schema.json",
  "title": "os.context.text.redacted",
  "description": "Flüchtige Ereignisse während der Text-Erfassung (Debug/Audit, RAM/WAL, kurze TTL).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Zeitpunkt der Erfassung."
    },
    "app": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Ursprungs-App."
    },
    "window": {
      "type": "string",
      "maxLength": 512,
      "description": "Fenster-/Dokumentkontext."
    },
    "snippet": {
      "type": "string",
      "maxLength": 1024,
      "description": "Redigierter Textabschnitt (ohne PII/Secrets). Darf nicht persistiert werden."
    },
    "pii_detected": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 64
      },
      "maxItems": 32,
      "description": "Erkannte PII/Secret-Typen (z. B. email, phone, iban, jwt, api_key)."
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Konfidenz der PII/Secret-Erkennung (0..1)."
    },
    "privacy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raw_retained": {
          "type": "boolean",
          "const": false,
          "description": "Rohtext wurde NICHT persistiert."
        },
        "storage": {
          "type": "string",
          "enum": ["ram", "wal"],
          "description": "Nur flüchtig (RAM) oder kurzlebiges WAL (TTL ≤ 300s)."
        },
        "ttl_sec": {
          "type": "integer",
          "minimum": 0,
          "maximum": 600,
          "description": "Time-to-live in Sekunden (Empfehlung ≤ 300)."
        }
      },
      "required": ["raw_retained"]
    },
    "source": {
      "type": "string",
      "maxLength": 64,
      "description": "Sensorquelle (default: mitschreiber)."
    }
  },
  "required": ["ts", "app", "snippet", "privacy"],
  "examples": [
    {
      "ts": "2025-10-05T10:17:20Z",
      "app": "obsidian",
      "window": "Notes/ideas.md — Obsidian",
      "snippet": "Refactor der Embedding-Pipeline; Secrets durch NER/Regex maskieren.",
      "pii_detected": [],
      "confidence": 0.0,
      "privacy": { "raw_retained": false, "storage": "ram", "ttl_sec": 60 },
      "source": "mitschreiber"
    }
  ]
}
